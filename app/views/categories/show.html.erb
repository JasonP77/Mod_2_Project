<h1><%=@category.name%></h1>
<h3><%=@category.description%></h3>
<br>
<p><%= link_to "New Post", new_post_path(category_name: @category.name, category_id: @category.id) %></p>
<br>
<br>
<h3>Posts</h3>
<br>
<% @category.posts.each do |post| %>
    <li>Posted by: <%= post.user.username %>
    <br>
    <em><%= link_to post.title, post_path(post) %></em>
    </li>
    <br>
<% end %>
<br>
<br>
<%= link_to "Categories Homepage", categories_path %>
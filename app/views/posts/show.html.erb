<h1>Category: <%= @post.category.name %></h1>
<br>
<h2><%=@post.title%></h2>

<h3>Posted By: <%= @post.user.username %></h3>
<br>
<p><%=@post.content%></p>
<p><%= link_to "Respond to Post", new_comment_path(:post => @post.id) %>


<h4>Comments</h4>
<% @post.comments.each do |comment| %>
    <li><%=comment.user.username %>: <%= link_to "Reply", new_comment_path(:comment => {:parent_id => comment.id, :post => @post.id}) %>
    <br>
    <%=comment.content%></li>
    <% if comment.replies %>
        <ul>
        <% comment.replies.each do |reply| %>
            <li>---<%=reply.user.username%>:
            <br>
            <%=reply.content%></li>
            <br>
        <% end %>
        </ul>
    <% end %>
    <br>
<% end %>
<br>
<br>
<br>
<%= link_to "Category Homepage", category_path(@post.category)%>
<br>
<%= link_to "Users Index", users_path %>
<h1>Create A New Post</h1>

<% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
<% end %>

<%=form_for @post do |p| %>
	<br>
	<b><%= p.label :users %><b>
	<%= p.collection_select :user, User.all, :id, :username, prompt: true %>
	<br>
	<b><%= p.label :categories %></b>
	<%= p.collection_select :category, Category.all, :id, :name, prompt: true %>
	<br>
	<br>
	<b><%= p.label :title %></b>
	<%= p.text_field :title %>
	<br>
	<br>
	<b><%= p.label :content %></b>
	<%= p.text_field :content%>
	<br>
	<%= p.submit %>
<% end %>
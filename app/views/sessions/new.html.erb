<div id="login_container">

  <h1 class="login_sign_in_center">Login</h1>

  <!--<%= flash[:notice] %> Works too-->

  <% flash.each do |type, msg| %>
    <div>
      <p class="red"><%= msg %><p>
    </div>
  <% end %>
  <br>
  <br>
  <%= form_tag login_path do %>
  <div class="center">
    <i class="user icon"></i>
    <%= text_field_tag :username, nil, placeholder: 'Username' %>
    <br>
    <br>
  </div>
  <div class="center">
    <i class="key icon"></i>
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
    <br>
    <br>
    <br>
    </div>
    <div class="login_sign_in_center"><%= submit_tag "Sign In" %></div>
  <% end %>

  <br>
  <br>

  <div class="center_homepage">
  <%= link_to about_path do %>
   <p class="black">Return to Homepage</p>
   <% end %>
  </div>

</div>
<div id="login_container">

  <h1 class="login_sign_in_center">Login</h1>

  <!--<%= flash[:notice] %> Works too-->

  <% flash.each do |type, msg| %>
    <div>
      <p class="red"><%= msg %><p>
    </div>
  <% end %>
  <br>
  <br>
  <div class="login_credents"> <!-- Begin login credents -->
  <%= form_tag login_path do %>
    <div>
    <i class="user icon center"></i>
    <%= text_field_tag :username, nil, placeholder: 'Username' %>
    </div>
    <br>
    <br>
    <div>
    <i class="key icon center"></i>
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
    </div>
    <br>
    <br>

    <div class="login_sign_in_center"><%= submit_tag "Sign In" %></div>
  <% end %>
</div> <!--End of Login Credents -->
  <br>
  <br>

  <div>
  <%= link_to about_path do %>
   <p class="black">Back to Homepage</p>
   <% end %>
  </div>

</div>
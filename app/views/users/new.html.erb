<div id="new_user_container">
<h1 class="center_h1_new">New User Form</h1>
<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
<% end %>

<br>

<%= form_for @user do |f| %>
	<div id="center_form_in_container">
	<div class="center_full_name">
	<b><%= f.label :full_name%>:</b>
	<%= f.text_field :full_name%>
	<br>
	</div>
	<div class="center_username">
	<b><%= f.label :username%>:</b>
	<%= f.text_field :username%>
	<br>
	</div>
	<div class="center_email">
	<b><%= f.label :email%>:</b>
	<%= f.text_field :email%>
	<br>
	</div>
	<div class="center_password">
	<b><%= f.label :password %>:</b>
	<%= f.password_field :password%>
	<br>
	</div>
	<div class="center_password_confirmation">
	<b><%= f.label :password_confirmation %>:</b>
	<%= f.password_field :password_confirmation %>
	<br>
	</div>
	<br>
	<div class="center_submit">
	<b><%= f.submit %></b>
	</div>
	<br>
	</div>
<% end %>


<br>
<br>
<%= link_to "Cancel", users_path %>
</div>